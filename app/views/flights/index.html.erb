<h1>Listing flights</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.number %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.date %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>


<div class="container">
  <h1><a href="#">Flights List</a></h1>
  <div id="main"></div>
</div>

<script type="template/html" id="appView">

  <h1>Available Flights</h1>
  <ul id="flights"></ul>

</script>

<script type="template/handlebars" id="flightsListView">
  {{title}}
</script>

<script type="template/handlebars" id="flightView">

  <div class="flight">

    <p> {{ name }}</p>
    <p> {{ origin }}</p>
    <p> {{ destination }} </p>
    <p> {{ date }} </p>

  </div>

</script>