<h1>Listing airplanes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rows</th>
      <th>Columns</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airplanes.each do |airplane| %>
      <tr>
        <td><%= airplane.name %></td>
        <td><%= airplane.rows %></td>
        <td><%= airplane.columns %></td>
        <td><%= link_to 'Show', airplane %></td>
        <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
        <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airplane', new_airplane_path %>

<div id="airplane-name"><div>
<div id="airplane-rows"></div>
<div id="airplane-columns"></div>

  <script type="template/handlebars" id="airplaneView">
    <div class="post">
      <h2>{{ name }}</h2>
      <h4>{{ row }}</h4>
      <p> {{ columns }}</p>
    </div>
  </script>